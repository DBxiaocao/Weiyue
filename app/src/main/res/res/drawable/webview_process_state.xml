<?xml version="1.0" encoding="utf-8"?>
<!-- 层叠 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp"/>
            <gradient
                android:angle="270"
                android:centerColor="@color/app_color_bg"
                android:endColor="@color/app_color_bg"
                android:startColor="@color/app_color_bg"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <gradient
                    android:centerColor="?attr/colorPrimary"
                    android:endColor="?attr/colorPrimary"
                    android:startColor="?attr/colorPrimary"/>
            </shape>
        </clip>
    </item>

</layer-list>